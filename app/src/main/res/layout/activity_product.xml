<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity"
    android:background="@drawable/top_bg">

    <!--Jiun Lin-->
    <!--Item Image-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180pt"
        android:layout_height="635dp"
        android:layout_marginBottom="10pt"
        android:background="@drawable/bgbg"
        app:layout_constraintBottom_toBottomOf="@+id/llProductInfo"
        app:layout_constraintEnd_toEndOf="@+id/llProductInfo"
        app:layout_constraintStart_toStartOf="@+id/llProductInfo"
        app:layout_constraintTop_toTopOf="@+id/llProductInfo"
        app:layout_constraintVertical_bias=".2" />

    <LinearLayout
        android:id="@+id/llProductInfo"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:padding="10pt"
            android:id="@+id/ivItemSoldImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/milocup"
           android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!--RM Banner-->
                <TextView
                    android:id="@+id/tvRM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!--Item sold price-->
                <TextView
                    android:id="@+id/tvItemSoldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.90"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!-- Seller Banner-->
                <TextView
                    android:id="@+id/tvSellerBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seller: "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <!-- Item sold seller-->
                <TextView
                    android:id="@+id/tvItemSoldSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Is me"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!--item sold name-->
                <TextView
                    android:id="@+id/tvItemSoldName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milo Cup"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!--current remaining stock-->
                <TextView
                    android:id="@+id/tvStockRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Stock Remaining: "
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvItemSoldQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

        </LinearLayout>

        <!--Item Description-->
        <TextView
            android:id="@+id/tvItemSoldDesc"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/white_border_edt"
            android:padding="20dp"
            android:text="This is a Milo Cup......"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!-- Pick amount-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="150dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/dec"
                        android:text="-"
                        android:textSize="15pt" />

                    <View
                        android:layout_width="5pt"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/edtquan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="12pt" />

                    <View
                        android:layout_width="5pt"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/inc"
                        android:text="+"
                        android:textSize="15pt" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!-- Add To Cart button-->
                <TextView
                    android:id="@+id/btnAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="@drawable/subbutton"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnBackToHomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".04"
        app:layout_constraintHorizontal_bias=".06"/>


</androidx.constraintlayout.widget.ConstraintLayout>