<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".Profile">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:layout_width="1300pt"
        android:layout_height="150pt"
        android:background="@drawable/top_bg"/>

    <TextView
        android:layout_width="1800pt"
        android:layout_height="120pt"
        android:layout_marginTop="90dp"
        android:background="@drawable/bigboxx" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilepic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/sponge"
        app:civ_border_color="#FDA250"
        app:civ_border_width="2dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilepic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="10pt"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="SpongeBob" />

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide"
        android:layout_below="@id/profilename"
        android:layout_marginTop="25dp"
        android:background="@android:color/darker_gray"/>


    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:columnCount="4"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_below="@id/divide"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/pay"
                android:layout_width="25pt"
                android:layout_height="25pt"
                app:srcCompat="@drawable/wallet" />

            <TextView
                android:id="@+id/paytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_below="@id/pay"
                android:textSize="5pt"
                android:text="To Pay" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/ship"
                android:layout_width="25pt"
                android:layout_height="25pt"
                app:srcCompat="@drawable/parcel" />

            <TextView
                android:id="@+id/shiptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_below="@id/ship"
                android:textSize="5pt"
                android:text="To Ship" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/receive"
                android:layout_width="25pt"
                android:layout_height="25pt"
                app:srcCompat="@drawable/receive" />

            <TextView
                android:id="@+id/receivetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_below="@id/receive"
                android:textSize="5pt"
                android:text="To Receive" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/rate"
                android:layout_width="25pt"
                android:layout_height="25pt"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/ratetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_below="@id/rate"
                android:textSize="5pt"
                android:text="To Rate" />
        </RelativeLayout>

    </GridLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide1"
        android:layout_below="@id/GridLayout1"
        android:layout_marginTop="25dp"
        android:background="@android:color/darker_gray"/>

    <GridLayout
        android:id="@+id/grid3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:columnCount="4"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_below="@id/divide1"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="55dp">

            <ImageView
                android:id="@+id/buttonUploadProduct"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/upload_product_icon" />

            <TextView
                android:id="@+id/ewallettext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_below="@id/buttonUploadProduct"
                android:textSize="5pt"
                android:text="Upload My Product" />
        </RelativeLayout>


        <!--<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">


            <View
                android:id="@+id/linemiddle"
                android:layout_width="2dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:background="#00008B" />
        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_marginRight="55dp">

            <ImageView
                android:id="@+id/btnMyProduct"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/my_product_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_below="@id/btnMyProduct"
                android:textSize="5pt"
                android:text="My Products" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_marginRight="55dp">

            <ImageView
                android:id="@+id/buttonUpdateProfile"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/update_profile_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_below="@id/buttonUpdateProfile"
                android:textSize="5pt"
                android:text="Update Profile" />
        </RelativeLayout>


    </GridLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide1.5"
        android:layout_below="@id/grid3"
        android:background="@android:color/darker_gray"/>

    <GridLayout
        android:id="@+id/GridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:columnCount="4"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_below="@id/divide1.5"
        >

        <Button
            android:id="@+id/btnLogout"
            android:text="Log Out"
            android:textStyle="bold"
            android:backgroundTint="#D64444"
            android:layout_marginTop="10dp"
            android:padding="20dp"/>
    </GridLayout>


    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divide2"
        android:layout_below="@id/GridLayout2"
        android:layout_marginTop="25dp"
        android:background="@android:color/darker_gray"/>



        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navicorner"
        app:menu="@menu/navigationbar"
        app:itemRippleColor="#BDB76B"
        app:itemIconTint="@color/icon_color"
        app:itemTextColor="#BDB76B">
    </com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>