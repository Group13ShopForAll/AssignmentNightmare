<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/cvMyProduct">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_logo"
        android:id="@+id/civMyProductImg" />

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/civMyProductImg"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/crete_round"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMyProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvItemName"
            android:text="Item"
            android:fontFamily="@font/crete_round"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItemName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/civMyProductImg"
            android:text="Price (RM):"
            android:fontFamily="@font/crete_round"
            android:textColor="@color/black"
            android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMyProductPrice"
        android:text="9.90"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/tvItemPrice"
        android:layout_below="@+id/tvMyProductName"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock:"
        android:fontFamily="@font/crete_round"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/civMyProductImg"
        android:layout_below="@+id/tvItemPrice"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMyProductStock"
        android:text="1"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/tvAmount"
        android:layout_below="@+id/tvMyProductPrice"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvMyProductStock">

        <Button
            android:id="@+id/btnMyProductEdit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textAllCaps="false"
            android:backgroundTint="#8BC34A"
            android:fontFamily="@font/crete_round"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnMyProductDelete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textAllCaps="false"
            android:fontFamily="@font/crete_round"
            android:backgroundTint="#D64444"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>