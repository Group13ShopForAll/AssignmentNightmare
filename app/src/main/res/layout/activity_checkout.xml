<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgstar"
    tools:context=".Checkout">

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/black"
        android:layout_marginTop="6pt"
        android:id="@+id/topp"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"/>

    <TextView
        android:layout_width="150pt"
        android:layout_height="260pt"
        android:layout_below="@id/topp"
        android:layout_centerInParent="true"
        android:layout_marginTop="-1dp"
        android:background="@drawable/whitecurvedbg" />

    <TextView
        android:id="@+id/deliveringto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topp"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/crete_round"
        android:text="Delivering to: "
        android:textColor="@color/black"
        android:textSize="7pt" />

    <TextView
            android:id="@+id/adress"
            android:layout_width="80pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:text="Jalan banana 3"
            android:layout_below="@id/deliveringto"
            android:fontFamily="@font/crete_round"
            android:textColor="@color/black"
            android:textSize="7pt" />


    <View
        android:id="@+id/dividee"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_below="@id/adress"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="5pt"
        android:layout_marginRight="20pt"
        android:layout_marginBottom="5pt"
        android:background="@color/black" />

    <TextView
        android:id="@+id/Voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividee"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="5pt"
        android:fontFamily="@font/crete_round"
        android:text="Voucher Used: "
        android:textColor="@color/black"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/VoucherUsed"
        android:layout_width="80pt"
        android:layout_height="wrap_content"
        android:layout_below="@id/Voucher"
        android:layout_marginLeft="20pt"
        android:layout_marginBottom="5pt"
        android:fontFamily="@font/crete_round"
        android:text="no voucher used ..."
        android:textColor="@color/black"
        android:textSize="7pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividee"
        android:layout_marginLeft="70pt"
        android:layout_marginTop="4pt"
        android:layout_toRightOf="@id/Voucher"
        android:text=">"
        android:id="@+id/directvoucher"
        android:textColor="@color/black"
        android:textSize="15pt" />

    <View
        android:id="@+id/dividee1"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_below="@id/VoucherUsed"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="5pt"
        android:layout_marginRight="20pt"
        android:layout_marginBottom="5pt"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividee1"
        android:id="@+id/merchant"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchandise Subtotal ("
            android:fontFamily="@font/crete_round"
            android:textColor="@color/black"
            android:layout_marginLeft="20pt" />
        <TextView
            android:id="@+id/totalitemquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" items)"
            android:textColor="@color/black" />
        <View
            android:layout_width="25pt"
            android:layout_height="0pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/crete_round"
                android:text="RM"/>
            <TextView
                android:layout_width="17pt"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:text="0.00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/merchant"
        android:layout_marginTop="3pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:text="Shipping Fee Subtotal"
            android:fontFamily="@font/crete_round"
            android:textColor="@color/black" />

        <View
            android:layout_width="50.5pt"
            android:layout_height="0pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM"
            android:fontFamily="@font/crete_round"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="17pt"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shipping"
        android:id="@+id/shippromo"
        android:layout_marginTop="3pt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Fee Promotion"
            android:textColor="@color/black"
            android:textSize="4.5pt"
            android:fontFamily="@font/crete_round"
            android:layout_marginLeft="20pt" />

        <View
            android:layout_width="66.5pt"
            android:layout_height="0pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/crete_round"
            android:textSize="4.5pt"
            android:text="RM"/>
        <TextView
            android:layout_width="13pt"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="4.5pt"
            android:text="0.00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shippromo"
        android:id="@+id/discountpromo"
        android:layout_marginTop="3pt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount Promotion"
            android:textColor="@color/black"
            android:textSize="4.5pt"
            android:fontFamily="@font/crete_round"
            android:layout_marginLeft="20pt" />

        <View
            android:layout_width="75pt"
            android:layout_height="0pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="4.5pt"
            android:fontFamily="@font/crete_round"
            android:text="RM"/>
        <TextView
            android:layout_width="13pt"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="4.5pt"
            android:text="0.00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/discountpromo"
        android:layout_marginTop="3pt"
        android:id="@+id/totall"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textColor="@color/black"
            android:fontFamily="@font/crete_round"
            android:layout_marginLeft="20pt" />

        <View
            android:layout_width="73pt"
            android:layout_height="0pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/crete_round"
            android:text="RM"/>
        <TextView
            android:layout_width="17pt"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:text="0.00"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/black"
        android:layout_marginTop="6pt"
        android:id="@+id/dividee2"
        android:layout_below="@id/totall"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAY"
        android:id="@+id/pay"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dividee2"
        android:layout_marginTop="7pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"/>

    <ImageButton
        android:id="@+id/backprofile"
        android:layout_width="20pt"
        android:layout_height="15pt"
        android:background="@drawable/backarrow"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"/>



</RelativeLayout>